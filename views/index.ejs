  <% if (user) { %>
    <% include head_user.ejs %>
    <div class="jumbotron">
      <h2>Welcome back, user.</h2>
      <br />
      <div class="leftalign">
        <% if (user_courses.length > 0) { %>
        <p>You are enrolled in <%- user_courses.length %> courses:</p>
          <ul>
            <% for(i=0; i<user_courses.length; i++) { %>
              <li class="course"><%- user_courses[i] %></li>
            <% } %>
          </ul>
        <% } %>
      </div>
      <form role="form" action="/addcourse" method="post" style="max-width: 300px;">
        <div class="form-group courseinfo">
          <input type="text" name="subject" placeholder="@@@@" class="form-control">
        </div>
        <div class="form-group courseinfo">
          <input type="number" name="number" placeholder="###" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Add</button>&nbsp;
      </form>
    </div>
  <% } else {%>
    <% include head.ejs %>
    <div class="jumbotron">
      <h1 class="studybuddy">StudyBuddy</h1>
      <p class="Nervous">Nervous for an exam? You're not alone.</p>
      <p class="Connect">Connect with your classmates today!</p>
      <p><a class="btn btn-lg btn-success" href="/register" role="button">Get Better Grades Now</a></p>
    </div>
  <% } %>

<% include foot.ejs %>